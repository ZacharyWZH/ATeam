<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="200dp"
    android:weightSum="5"
    android:layout_height="300dp"
    android:background="@color/colorPrimaryDark"
    >
    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:layout_centerHorizontal="true"
            android:text="添加任务"
            android:textSize="25dp"
            android:textColor="@color/widowColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <EditText
            android:id="@+id/et_task_name"
            android:textColor="@color/widowColor"
            android:textColorHint="@color/widowColor"
            android:layout_centerHorizontal="true"
            android:hint="输入要添加的任务名称"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/et_task_detail"
            android:layout_below="@+id/et_task_name"
            android:textColor="@color/widowColor"
            android:textColorHint="@color/widowColor"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:hint="输入任务详情"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/et_task_status"
            android:layout_below="@+id/et_task_detail"
            android:textColor="@color/widowColor"
            android:layout_marginTop="10dp"
            android:textColorHint="@color/widowColor"
            android:layout_centerHorizontal="true"
            android:hint="输入任务状态"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <Button
            android:id="@+id/btn_commit"
            android:background="@color/colorPrimary"
            android:textColor="@color/widowColor"
            android:layout_centerHorizontal="true"
            android:text="添加"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>